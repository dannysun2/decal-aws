= form_for(@order) do |f|
  - if @order.errors.any?
    #error_explanation
      %h2
        = pluralize(@order.errors.count, "error")
        prohibited this order from being saved:
      %ul
        - @order.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :purchase_date
    %br/
    = f.datetime_select :purchase_date
  .field
    = f.label :sku
    %br/
    = f.text_field :sku
  .field
    = f.label :product_name
    %br/
    = f.text_field :product_name
  .actions
    = f.submit
