= form_for(@buyer) do |f|
  - if @buyer.errors.any?
    #error_explanation
      %h2
        = pluralize(@buyer.errors.count, "error")
        prohibited this buyer from being saved:
      %ul
        - @buyer.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :email
    %br/
    = f.text_field :email
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :phone
    %br/
    = f.text_field :phone
  .actions
    = f.submit
